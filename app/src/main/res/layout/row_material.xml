<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/materialName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Material"
        android:textColor="@color/text_gray_color"
        app:layout_constraintEnd_toEndOf="@+id/materialImage"
        app:layout_constraintStart_toStartOf="@+id/materialImage"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/materialImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialName"
        app:srcCompat="@drawable/image_test" />

    <Button
        android:id="@+id/materialQuantity"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/circle_shape_green"
        android:padding="0dp"
        android:text="0"
        android:textSize="18dp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/materialImage"
        app:layout_constraintStart_toStartOf="@+id/materialImage"
        app:layout_constraintTop_toTopOf="@+id/materialImage" />

</androidx.constraintlayout.widget.ConstraintLayout>